<!doctype html>
<html lang="pt-BR">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <!--Jquery-->
  <script type="text/javascript" src="/js/jquery-1.7.2.js"></script>

  <!--Validation-->
  <script type="text/javascript" src="/js/jquery.validate.js"></script>
  <script type="text/javascript" src="/js/validation.js"></script>

  <title>Usuario</title>
</head>

<body>

  <% if (typeof user !=='undefined' ) { %>
    <% var titulo="Alterar Usuario" %>
      <% var rota="/users/edit/" +user.id %>
        <% } else { %>
          <% var titulo="Novo Usuario" %>
            <% var rota="/users/new" %>
              <% } %>

                <div class="container pt-5">
                  <br><br>
                  <form action="/logout" method="post">
                    <button type="submit" class="btn btn-danger ">Deslogar</button>
                  </form>
                  <br><br>
                  <br><br>
                  <a href="javascript:history.back()"><i class="fas fa-long-arrow-alt-left"></i> Voltar</a>
                  <br><br>

                  <% if (typeof msg !=='undefined' ){ %>

                    <% if (msg.tipo==='sucesso' ){ %>
                      <div class="alert alert-success alert-dismissible fade show p-4" role="alert">
                        <strong>Sucesso! </strong>
                        <%= msg.corpo %>
                      </div>
                      <% } %>
                        <% if (msg.tipo==='erro' ){ %>
                          <div class="alert alert-danger alert-dismissible fade show p-4" role="alert">
                            <strong></i> Erro! </strong>
                            <%= msg.corpo %>
                          </div>
                          <% } %>
                            <% } %>

                              <div class="card shadow">
                                <div class="card-header d-flex justify-content-between ">
                                  <h2 class="float-left card-title"></i>
                                    <%= titulo %>
                                  </h2>
                                </div>
                                <div class="card-body p-5">
                                  <form id="formuser" name="formuser" action="<%= rota %>" method="post">
                                    <div class="mb-3">
                                      <label for="email">Email</label>
                                      <input type="email" class="form-control" id="email" name="email" required
                                        value="<%= typeof user !== 'undefined' ? user.email : null %>"
                                        placeholder="Digite o email">
                                    </div>
                                    <div class="mb-3">

                                      <label for="password">Senha</label>
                                      <% if (typeof user !='undefined' ) { %>
                                        <input type="password" class="form-control" id="password" name="password"
                                          placeholder="Digite uma senha nova caso deseje alterar esse campo">
                                        <% } else { %>
                                          <input type="password" class="form-control" id="password" required
                                            name="password" placeholder="Digite a senha">
                                          <% } %>
                                    </div>
                                    <div class="text-center"><button type="submit" class="btn btn-primary "
                                        id="btnsubmit">Cadastrar</button></div>
                                  </form>
                                </div>
                                <!--card-body-->
                              </div>
                              <!--card-->
                </div>
                <!--container-->


                <!-- Optional JavaScript; choose one of the two! -->

                <!-- Option 1: Bootstrap Bundle with Popper -->
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                  crossorigin="anonymous"></script>

                <!-- Option 2: Separate Popper and Bootstrap JS -->
                <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    -->
</body>


</html>