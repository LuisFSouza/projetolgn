<!doctype html>
<html lang="pt-BR">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Usuarios</title>
</head>

<body>
  <div class="container pt-5">
    <form action="/logout" method="post">
      <button type="submit" class="btn btn-danger mb-5 ">Deslogar</button>
    </form>

    <div class="card shadow text-center">

      <div class="card-header d-flex justify-content-between ">
        <h2 class="float-left card-title"></i> Usuarios cadastrados</h2>
        <a href="/users/new" class="btn btn-success float-right btn-lg"></i> Novo Usuario</a>
      </div>
      <div class="card-body p-5">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">E-mail</th>
              <th scope="col">Senha</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user=> { %>
              <tr>
                <th scope="row">
                  <%= user.id %>
                </th>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.password %>
                </td>
                <td>
                  <a href="users/delete/<%= user.id %>" class="btn btn-secondary">Excluir</a>
                  <a href="users/edit/<%= user.id %>" class="btn btn-primary">Alterar</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
      <!--card-body-->
    </div>
    <!--card-->
  </div>
  <!--container-->


  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

